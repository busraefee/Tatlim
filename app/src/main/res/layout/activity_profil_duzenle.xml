<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ProfilDuzenleActivity">


    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/bar_produzActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/windowBackground">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_produzAct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/windowBackground">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/kapat_produzActivity"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_kapat"/>


                <TextView
                    android:text="Profil Düzenle"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:textSize="18sp"
                    android:layout_toEndOf="@+id/kapat_produzActivity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/kaydet_produzActvitiy"
                    android:text="KAYDET"
                    android:textSize="16sp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentEnd="true"
                    android:textColor="@color/colorPrimary"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>


        </androidx.appcompat.widget.Toolbar>



    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profilduzenle_profilresmi"
            android:src="@mipmap/ic_launcher"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_width="90dp"
            android:layout_height="90dp"/>

        <TextView
            android:id="@+id/txt_profilduzenle"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fotoğrafı Değiştir"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="20dp"
            android:text="Adınız"/>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/profilduzenle_adiniz"
            android:layout_marginTop="0dp"
            app:met_floatingLabel="normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Adınız.."/>


        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="20dp"
            android:text="Kullanıcı Adınız"/>
        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/profilduzenle_kullaniciadiniz"
            android:layout_marginTop="0dp"
            app:met_floatingLabel="normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Kullanıcı Adınız.."/>

        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="20dp"
            android:text="Pozisyon"/>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/profilduzenle_pozisyon"
            android:layout_marginTop="0dp"
            app:met_floatingLabel="normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Pozisyon.."/>


    </LinearLayout>

</LinearLayout>